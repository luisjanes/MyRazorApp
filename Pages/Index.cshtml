@page
@model MyRazorApp.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <title>
        Olá, Mundo!
    </title>
</head>
<body>
    <partial name="Shared/NavMenuPartial" />
    <h1>
        Categorias
    </h1>
    <div>
        <table>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Title<td>
                    <td>Price</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title<td>
                        <td>@item.Price.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>